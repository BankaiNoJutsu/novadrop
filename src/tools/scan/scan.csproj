<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <ApplicationManifest>scan.manifest</ApplicationManifest>
        <AssemblyName>novadrop-scan</AssemblyName>
        <PackAsToolShimRuntimeIdentifiers>win-x64</PackAsToolShimRuntimeIdentifiers>
        <PackageDescription>$(PackageDescription)

This package provides the .NET global tool for extracting useful data from a
running TERA client.</PackageDescription>
        <PackageId>novadrop-scan</PackageId>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Iced" />
        <PackageReference Include="Microsoft.Windows.CsWin32"
                          PrivateAssets="all" />
        <PackageReference Include="Microsoft.Windows.SDK.Win32Docs"
                          PrivateAssets="all" />
        <PackageReference Include="Microsoft.Windows.SDK.Win32Metadata"
                          PrivateAssets="all" />
    </ItemGroup>
</Project>
